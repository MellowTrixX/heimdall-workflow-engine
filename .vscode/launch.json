{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension in Test Workspace",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                // Dieser Befehl Ã¶ffnet den test-workspace Ordner automatisch.
                "${workspaceFolder}/test-workspace" 
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: compile"
        }
    ]
}